<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape">

    <LinearLayout
        android:id="@+id/ll"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/percentA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%" />

            <com.skydoves.progressview.ProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/prA"
                android:layout_width="50dp"
                android:layout_height="250dp"
                app:progressView_animation="normal"
                app:progressView_colorBackground="@color/white"
                app:progressView_colorProgress="#4CAF50"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_orientation="vertical">

            </com.skydoves.progressview.ProgressView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/percentB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%" />

            <com.skydoves.progressview.ProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/prB"
                android:layout_width="50dp"
                android:layout_height="250dp"
                app:progressView_animation="normal"
                app:progressView_colorBackground="@color/white"
                app:progressView_colorProgress="#4CAF50"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_orientation="vertical">

            </com.skydoves.progressview.ProgressView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="B"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/percentC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%" />

            <com.skydoves.progressview.ProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/prC"
                android:layout_width="50dp"
                android:layout_height="250dp"
                app:progressView_animation="normal"
                app:progressView_colorBackground="@color/white"
                app:progressView_colorProgress="#4CAF50"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_orientation="vertical">

            </com.skydoves.progressview.ProgressView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/percentD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%" />

            <com.skydoves.progressview.ProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/prD"
                android:layout_width="50dp"
                android:layout_height="250dp"
                app:progressView_animation="normal"
                app:progressView_colorBackground="@color/white"
                app:progressView_colorProgress="#4CAF50"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_orientation="vertical">

            </com.skydoves.progressview.ProgressView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="D"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Ok"
        android:textColor="@color/white"
        android:textSize="20dp" />
</RelativeLayout>